<%- layout('layouts/boilerplate') %>

<style>
  .error-wrap {
    min-height: calc(100vh - 160px);
    padding: 120px 16px 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-card {
    width: 100%;
    max-width: 860px;
    border: 1px solid #ebebeb;
    border-radius: 18px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 16px 40px rgba(0,0,0,0.10);
    display: grid;
    grid-template-columns: 1.1fr 1fr;
  }

  .error-left {
    position: relative;
    padding: 34px 28px;
    background: linear-gradient(135deg, rgba(255,56,92,0.12), rgba(215,4,102,0.06));
    overflow: hidden;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-weight: 900;
    color: #FF385C;
    text-decoration: none;
    letter-spacing: 0.2px;
    margin-bottom: 18px;
  }

  .brand i {
    background: rgba(255,56,92,0.16);
    width: 40px;
    height: 40px;
    border-radius: 14px;
    display: grid;
    place-items: center;
  }

  .status {
    font-size: 12px;
    font-weight: 800;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #717171;
    margin-bottom: 10px;
  }

  .headline {
    font-size: 28px;
    font-weight: 900;
    color: #222;
    margin: 0 0 10px 0;
    line-height: 1.2;
  }

  .message {
    color: #555;
    margin: 0 0 18px 0;
    line-height: 1.7;
    font-size: 14px;
  }

  .chips {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 18px;
  }

  .chip {
    font-size: 12px;
    font-weight: 700;
    color: #222;
    border: 1px solid #e9e9e9;
    background: #fff;
    padding: 8px 10px;
    border-radius: 999px;
  }

  .actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .btn-primary-theme {
    border: none;
    border-radius: 12px;
    padding: 12px 14px;
    font-weight: 900;
    background: linear-gradient(to right, #E61E4D 0%, #E31C5F 50%, #D70466 100%);
    color: #fff;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: transform 0.15s ease, box-shadow 0.15s ease;
  }

  .btn-primary-theme:hover {
    transform: translateY(-1px);
    box-shadow: 0 12px 24px rgba(215,4,102,0.22);
    color: #fff;
  }

  .btn-ghost {
    border: 1px solid #ddd;
    border-radius: 12px;
    padding: 12px 14px;
    font-weight: 900;
    background: #fff;
    color: #222;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: background 0.15s ease;
  }

  .btn-ghost:hover {
    background: #f7f7f7;
    color: #222;
  }

  /* Right: animated "lost compass" scene */
  .error-right {
    position: relative;
    background: #fff;
    display: grid;
    place-items: center;
    padding: 24px;
  }

  .scene {
    width: 100%;
    max-width: 320px;
    aspect-ratio: 1/1;
    position: relative;
  }

  .ring {
    position: absolute;
    inset: 18px;
    border-radius: 50%;
    border: 2px dashed rgba(255,56,92,0.35);
    animation: ringRotate 10s linear infinite;
  }

  .ring2 {
    position: absolute;
    inset: 44px;
    border-radius: 50%;
    border: 2px dashed rgba(34,34,34,0.12);
    animation: ringRotate 14s linear reverse infinite;
  }

  .pulse {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 18px;
    height: 18px;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    background: rgba(255,56,92,0.16);
  }

  .pulse::before,
  .pulse::after {
    content: "";
    position: absolute;
    inset: -6px;
    border-radius: 50%;
    border: 2px solid rgba(255,56,92,0.18);
    animation: pulse 2.1s ease-in-out infinite;
  }

  .pulse::after {
    inset: -18px;
    animation-delay: 0.55s;
  }

  .compass {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 170px;
    height: 170px;
    transform: translate(-50%, -50%);
    border-radius: 28px;
    background: linear-gradient(180deg, #ffffff, #fafafa);
    border: 1px solid #ededed;
    box-shadow: 0 18px 40px rgba(0,0,0,0.08);
    display: grid;
    place-items: center;
    animation: float 3.2s ease-in-out infinite;
  }

  .compass-inner {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 1px solid #eaeaea;
    display: grid;
    place-items: center;
    position: relative;
    background: radial-gradient(circle at 30% 30%, #fff, #f7f7f7);
  }

  .needle {
    width: 6px;
    height: 54px;
    background: linear-gradient(#FF385C, #D70466);
    border-radius: 10px;
    position: absolute;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    transform-origin: 50% 42px;
    animation: needle 2.6s ease-in-out infinite;
    box-shadow: 0 10px 18px rgba(215,4,102,0.25);
  }

  .needle::after {
    content: "";
    position: absolute;
    bottom: -14px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-top: 14px solid rgba(34,34,34,0.08);
    filter: blur(0.2px);
  }

  .center-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #222;
    position: absolute;
  }

  .nsew {
    position: absolute;
    inset: 10px;
    font-size: 11px;
    font-weight: 900;
    color: #717171;
  }
  .nsew span {
    position: absolute;
    transform: translate(-50%, -50%);
  }
  .nsew .n { left: 50%; top: 6px; }
  .nsew .s { left: 50%; bottom: 2px; }
  .nsew .e { right: 2px; top: 50%; }
  .nsew .w { left: 6px; top: 50%; }

  .tag {
    position: absolute;
    bottom: 18px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    font-weight: 900;
    color: #222;
    background: rgba(255,56,92,0.10);
    border: 1px solid rgba(255,56,92,0.22);
    padding: 8px 10px;
    border-radius: 999px;
  }

  .error-code {
    position: absolute;
    top: 16px;
    right: 16px;
    font-size: 12px;
    font-weight: 900;
    color: #717171;
    background: #fff;
    border: 1px solid #eee;
    padding: 8px 10px;
    border-radius: 999px;
  }

  /* Animations */
  @keyframes ringRotate {
    from { transform: rotate(0deg); }
    to   { transform: rotate(360deg); }
  }

  @keyframes float {
    0%, 100% { transform: translate(-50%, -50%) translateY(0); }
    50%      { transform: translate(-50%, -50%) translateY(-8px); }
  }

  @keyframes needle {
    0%   { transform: translateX(-50%) rotate(-30deg); }
    50%  { transform: translateX(-50%) rotate(30deg); }
    100% { transform: translateX(-50%) rotate(-30deg); }
  }

  @keyframes pulse {
    0%   { transform: scale(0.85); opacity: 0.45; }
    50%  { transform: scale(1.0);  opacity: 0.20; }
    100% { transform: scale(0.85); opacity: 0.45; }
  }

  /* Responsive */
  @media (max-width: 900px) {
    .error-card {
      grid-template-columns: 1fr;
    }
    .error-right {
      padding: 10px 24px 26px;
    }
  }
</style>

<%
  // ✅ show a friendly status number if available
  const statusCode = err?.statusCode || err?.status || 500;
  const msg = err?.message || "Something went wrong.";
%>

<div class="error-wrap">
  <div class="error-card">

    <!-- LEFT: message -->
    <div class="error-left">
      <a class="brand" href="/">
        <i class="fa-solid fa-compass"></i>
        Wanderlust
      </a>

      <div class="status">We got lost</div>
      <h1 class="headline">Oops! This route doesn’t exist.</h1>
      <p class="message">
        <%= msg %>
      </p>

      <div class="chips">
        <div class="chip">Try searching listings</div>
        <div class="chip">Check the URL</div>
        <div class="chip">Go back to home</div>
      </div>

      <div class="actions">
        <a href="/" class="btn-primary-theme">
          <i class="fa-solid fa-house"></i>
          Back to Home
        </a>
        <a href="/listings" class="btn-ghost">
          <i class="fa-solid fa-magnifying-glass"></i>
          Explore Listings
        </a>
      </div>
    </div>

    <!-- RIGHT: animation -->
    <div class="error-right">
      <div class="error-code">Error <%= statusCode %></div>

      <div class="scene" aria-hidden="true">
        <div class="ring"></div>
        <div class="ring2"></div>
        <div class="pulse"></div>

        <div class="compass">
          <div class="compass-inner">
            <div class="nsew">
              <span class="n">N</span>
              <span class="e">E</span>
              <span class="s">S</span>
              <span class="w">W</span>
            </div>
            <div class="needle"></div>
            <div class="center-dot"></div>
          </div>
        </div>

        <div class="tag">Finding your way…</div>
      </div>
    </div>

  </div>
</div>
